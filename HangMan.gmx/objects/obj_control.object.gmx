        <arguments>
          <argument>
            <kind>1</kind>
            <string>// Process message
for (var i = 0; i &lt; ds_list_size(global.g_MessageQueue); i += 1)
{
    var msg = ds_list_find_value(global.g_MessageQueue, i);
    var type = ds_map_find_value(msg, "type");
    var data = ds_map_find_value(msg, "data");
    
    switch (type)
    {
        case MSG_PRESSED:
        {
            switch (data)
            {
                case 4000:
                {
                    scr_Game_Destroy();
                    scr_Game_Create();
                    break;
                }
                
                // Button New Game from Main Menu
                case 10000:
                {
                    // Pause the buttons
                    for (var i = 0; i &lt; 4; i ++)
                        with (global.g_MenuButtons[i])
                            m_Paused = true;
                    
                    // Show the user a menu so that he can select a category        
                    global.g_CategorySelectInstance = instance_create(global.g_FrameWidth / 2, 
                        global.g_FrameHeight / 2, obj_categorySelect);
                    with (global.g_CategorySelectInstance)
                    {
                        ds_list_copy(m_TextList, global.g_Categories);
                        
                        m_Font = fnt_categories;
                        m_FontColor = c_white;
                        m_Border = 3;
                        m_BorderColor = c_white;
                        m_Color1 = make_color_rgb(233, 165, 83);
                        m_Color2 = make_color_rgb(223, 123, 2);
                        m_Width = 200;
                        m_Height = 32;
                        m_Text = "Select Category:";
                        m_TextFontColor = c_black;
                        m_TextFont = fnt_menu;
                    }
                    //scr_ChangeState(STATE_GAME);
                    break;
                }
                
                // Button Exit Game from Main Menu
                case 10003:
                {
                    if (show_question("Are you sure you want to exit?"))
                        game_end();
                        
                    break;
                }
            }
            
            break;
        }
        
        case MSG_CATEGORY:
        {
            //show_message(ds_list_find_value(global.g_Categories, data - 3000));
            global.g_Category = ds_list_find_value(global.g_Categories, data - 3000);
            global.g_Diffictulty = get_integer("Select difficulty (1 - Easy, 2 - Medium, 3 - Hard," +
                    " 4 - Extreme)", 2);
            if (global.g_Difficulty &lt; 1 || global.g_Difficulty &gt; 4)
                global.g_Difficulty = 2;
            scr_ChangeState(STATE_GAME);
            break;
        }
    }
    
    ds_map_destroy(msg);
}
ds_list_clear(global.g_MessageQueue);  
</string>
